<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imagineAny.androidLifecycle" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.imagineAny.androidLifecycle.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imagineAny.androidLifecycle.SecondActivity"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name="com.imagineAny.androidLifecycle.TransparentActivity"
            android:theme="@style/Theme.Transparent" >
        </activity>
    </application>

</manifest>
